@page
@model IndexModel
@using ParkPlannerPark
@{
    ViewData["Title"] = "Home page";
    List<Datum> park = (List<Datum>)ViewData["Park"];
}

<div class="text-center">
    <h1 class="display-4">Welcome to Park Place</h1>
    <h2>Please stay tuned. Our site is currently under construction.</h2>
    <img src="https://user-images.githubusercontent.com/88552005/277193898-3a55302a-d57f-4ee4-86c3-15473b3e651e.jpg" alt="Park Planner" width="500">
   @if (park != null && park.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Park ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var parks in park)
                {
                    <tr>
                        <td>@parks.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No park IDs available.</p>
    }
</div>
